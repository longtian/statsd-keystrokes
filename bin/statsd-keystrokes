#!/usr/bin/env node
var argv = require('yargs')
  .usage('Usage: $0 [options] \n $0 -i 9 -i 10')
  .default('i', [9,10])
  .describe('i',"use `xinput list` to find device id")
  .array('i')
  .help('help')
  .alias('h', 'help')
  .epilog('copyright 2016')
  .argv;

require('../').initWithDeviceIDs(argv.i)